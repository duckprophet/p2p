    <!--获取平台累计投资金额-->
    <select id="selectAllBidMoney" resultType="java.lang.Double">
        select sum(bid_money) from b_bid_info
    </select>

    <!--根据产品标识获取最近的投资记录(包含用户信息)-->
    <select id="selectRecentlyBidInfoListByLoanId" resultMap="BidUserBaseResultMap">
        select
          a.*,u.*
        from
          b_bid_info a
        left join
          u_user u
        on
          a.uid = u.id
        where
          a.loan_id = #{loanId}
        order by
          a.bid_time desc
        limit #{currentPage},#{pageSize}
    </select>
    
    <!--根据用户标识获取最近的投资记录(包含产品信息)-->
    <select id="selectRecentlyBidInfoListByUid" resultMap="BidInfoLoanBaseResultMap">
        select
          b.*,a.*
        from
          b_bid_info b
        left join
          b_loan_info a
        on
          b.loan_id = a.id
        where
          b.uid = #{uid}
        order by
          b.bid_time desc
        limit #{currentPage},#{pageSize}
    </select>

    <!--根据产品标识获取所有投资记录-->
    <select id="selectAllBidInfoListByLoanId" resultMap="BaseResultMap">
        select
          <include refid="Base_Column_List"/>
        from
          b_bid_info
        where
          loan_id = #{loanId}
    </select>

